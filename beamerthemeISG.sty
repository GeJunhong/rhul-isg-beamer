       \advance\c@pp by 2 %
       %     
       \ifnum \c@section=1
                    \ifnum\c@section=##1%
               \setbox\beamer@tempbox=\hbox{%
              \hyperlink{Navigation##3}{\hbox to #1{%
             {\hskip0.3cm\usebeamertemplate{section in head/foot}\hskip0.3cm}}}}%
             \else%
                 \ifnum##1=\c@p%
                 \setbox\beamer@tempbox=\hbox{%
                  \hyperlink{Navigation##3}{\hbox to #1{%
                 {\hskip0.3cm\usebeamertemplate{section in head/foot shaded}\hskip0.3cm}}}}
                 %
                \else%
                 \ifnum##1=\c@pp%
                 \setbox\beamer@tempbox=\hbox{%
